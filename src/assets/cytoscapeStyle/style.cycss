core {
	active-bg-color: #fff;
	active-bg-opacity: 0.333;
}


node {
	width: 40;
	height: 40;
	font-size: 10;
	font-weight: bold;
	min-zoomed-font-size: 4;
	content: data(id);
	text-valign: center;
	text-halign: center;
	color: #000;
	text-outline-width: 2;
	text-outline-color: #fff;
	text-outline-opacity: 1;
	overlay-color: #fff;
}

edge {
    curve-style: bezier;
    target-arrow-shape: triangle;
    opacity: 0.333;
	width: 2;
	z-index: 0;
	overlay-opacity: 0;
    events: no;
}

edge[type = "execution"] {
	line-color: #D3D3D3;
	target-arrow-color: #D3D3D3;
	opacity: 0.666;
	z-index: 9;
	width: 4;
}

edge[type = "materialization"] {
	line-color: yellow;
	target-arrow-color: yellow;
	opacity: 0.666;
	z-index: 9;
	width: 4;
}

edge[type = "transitive"] {
	line-color: blue;
	target-arrow-color: blue;
	opacity: 0.666;
	z-index: 9;
	width: 4;
}

node[type = "initialState"] {
	background-color: white;
	text-outline-color: white;
}

node[type = "state"] {
	background-color: gray;
	text-outline-color: gray;
}

node[type = "finalState"] {
	background-color: red;
	text-outline-color: red;
}

node[type = "mergeState"] {
	background-color: green;
	text-outline-color: green;
}


node.highlighted {
	min-zoomed-font-size: 0;
  z-index: 9999;
}

edge.highlighted {
	opacity: 0.8;
	width: 4;
	z-index: 9999;
}

.faded {
  events: no;
}

node.faded {
  opacity: 0.08;
}

edge.faded {
  opacity: 0.06;
}

.hidden {
	display: none;
}

.highlighted {

}

node:selected {
	width: 40;
	height: 40;
	border-color: rgb(187, 219, 247);
	border-opacity: 0.5;
	border-width: 10;
}

.filtered {
	display: none;
}
